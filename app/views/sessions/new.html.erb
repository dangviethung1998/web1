<div id="content">
  <div id="login-form">
     <%= form_for :session, url: login_path do |f| %>
      <table >
        <tbody>
            <tr>
              <td style="text-align:right;"><label for="username"><%= t "views.sessions.login" %>:</label></td>
              <td style="text-align:left;"><%= f.text_field :email , class: "form-control" %></td>
            </tr>
            <tr>
              <td style="text-align:right;"><label for="password"><%= t "views.sessions.pass" %>:</label></td>
              <td style="text-align:left;"><%= f.password_field :password, class: "form-control" %></td>
            </tr>
            <tr>
              <td style="text-align:left;">
                <%= link_to t("views.sessions.lost_pass"), new_password_reset_path %>
              </td>
              <td style="text-align:right;">
                  <%= f.submit t("views.sessions.login"), class: "btn btn-primary" %>
              </td>
            </tr>
        </tbody>
      </table>
   <% end %>
  </div>
  <div style="clear:both;"></div>
</div>

